<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.settings.SettingsFragment"
    android:orientation="vertical"
    android:layout_marginTop="@dimen/settings_vertical_margin">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="@dimen/settings_vertical_margin">

        <TextView
            android:id="@+id/tv_lockSetting"
            android:layout_width="270dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/settings_layout_margin_left"
            android:text="@string/lock_Setting_txt"
            android:textSize="18dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/sw_lock"
            app:layout_constraintHorizontal_bias="0.58"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.021" />

        <Switch
            android:id="@+id/switch_lock"
            android:layout_width="79dp"
            android:layout_height="5dp"
            android:layout_marginEnd="16dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/gray_line"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/settings_vertical_margin"
        android:layout_marginBottom="@dimen/settings_vertical_margin">

        <TextView
            android:layout_width="270dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/settings_layout_margin_left"
            android:text="체중"
            android:textSize="18dp" />

        <EditText
            android:id="@+id/et_weight"
            android:layout_width="59dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginRight="@dimen/settings_layout_margin_right"
            android:ems="10"
            android:inputType="number" />

        <TextView
            android:layout_width="30dp"
            android:layout_height="wrap_content"
            android:text="kg"
            android:textSize="18dp" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/gray_line"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/settings_vertical_margin"
        android:layout_marginBottom="@dimen/settings_vertical_margin">

        <TextView
            android:layout_width="270dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/settings_layout_margin_left"
            android:text="컵 용량"
            android:textSize="18dp" />

        <EditText
            android:id="@+id/et_waterCup"
            android:layout_width="59dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/settings_layout_margin_right"
            android:layout_weight="1"
            android:ems="10"
            android:inputType="number" />

        <TextView
            android:layout_width="30dp"
            android:layout_height="wrap_content"
            android:text="ml"
            android:textSize="18dp" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/gray_line"/>


</LinearLayout>