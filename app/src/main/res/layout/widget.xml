<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/appWidgetBackgroundColor"
    android:padding="@dimen/widget_margin"
    android:theme="@style/ThemeOverlay.Plouf.AppWidgetContainer">

    <ImageView
        android:id="@+id/img_btn_water"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_centerInParent="true"
        android:layout_marginStart="85dp"
        android:layout_marginTop="312dp"
        android:src="@drawable/over_100" />

    <ImageView
        android:id="@+id/img_btn_pee"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_centerInParent="true"
        android:layout_marginStart="140dp"
        android:layout_marginTop="310dp"
        android:src="@drawable/toilet_pee" />

    <ImageView
        android:id="@+id/img_btn_feces"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_centerInParent="true"
        android:layout_marginStart="234dp"
        android:layout_marginTop="404dp"
        android:layout_marginEnd="91dp"
        android:src="@drawable/toilet_feces" />

</RelativeLayout>